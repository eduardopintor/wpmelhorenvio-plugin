.wpme_mainform
  color white
  width 70%
  margin auto
  text-align center
  font-size 1.200rem
  vertical-align middle
  form
    display inline-block
    width 100% !important

.wpme_inputtext
  border none !important
  box-shadow none !important
  border solid 1px #ffffff !important
  background-color rgba(255,255,255,.05) !important
  margin 30px 0 0
  color #DDDDDD !important
  width 100%
  min-height 150px
  max-height 250px
  &:focus
    border none !important
    box-shadow none !important
    border solid 1px #bbddff !important
    transition 100ms
    background-color rgba(205,205,255,0.08) !important
    margin 29px 0 0
    width 100%

.wpme_body_init
  background-image url('../../assets/img/backhome.png')
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  margin 20px 0
  height 80vh
  display flex
  padding 10px
  h1
    color #ffffff
    text-align center
  p
    padding 1px
    line-height 1
  a
    color $mandy
    text-decoration none
    &:hover
      text-decoration underline

.absolute
  position absolute
  z-index 100
  max-width 350px
