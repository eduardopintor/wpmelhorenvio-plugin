.wpme_config
  clear fix

.wpme_options
  display inline-block
  float left
  overflow-y hidden
  overflow-x auto
  list-style-type none
  padding 15px 0
  text-align center
  li
    list-style none
    display inline-block
    padding 0
    margin 0 7px
    color #777789

.wpme_service
  display inline-block
  float left
  width 200px
  border-radius 5px
  margin 0 0 15px
  border solid 1px #cccccc
  padding 20px
  background-color #fefeff
  height 80px

.wpme_service_body
  text-align center
  img
    width 120px
    margin 10px auto

.wpme_service_header
  width 100%
  border-bottom solid 1px #cccccc
  h2
    display inline-block
    padding 0 10px
    margin 0 0 15px
    text-align center
    color #777789
    font-weight 400
    font-size 1.010rem

.wpme_flex
  display flex
  float left
  width 100%
  position relative
  padding 0
  flex 1
  order 3
  overflow-y hidden
  overflow-x auto

.wpme_address
  text-align left
  border-radius 5px
  border solid 1px #cccccc
  padding 20px
  min-width 300px
  max-width 500px
  margin 15px 7px
  background #fefeff
  display block
  .wpme_address-top
    width 100%
    border-bottom solid 1px #ddddef
    h2
      display inline-block
      padding 0 20px
      margin 0 0 15px
      text-align center
      color #777789
      font-weight 300
      font-size 1.150rem
  ul
    padding 15px 0
    li
      padding 0
      margin 0
      color #777789

.wpme_company
  text-align left
  border-radius 5px
  border solid 1px #cccccc
  padding 20px
  width 300px
  min-width 300px
  margin 15px 7px
  background #fefeff

input[type=checkbox].toggle
  margin 3px
  -webkit-appearance none
  -moz-appearance none
  color #2bf
  width 4em
  height 1.7em
  border-radius 2em
  background-color #888
  transition background-color 0.3s ease-in-out
  outline 0
  position relative
  &:checked
    background-color #2bf
    color #2bf
    outline 0
    &::before
      opacity 0
      outline 0
    &::after
      content ''
      padding 0
      left 2.4em
      position absolute
      background-color #fff
      border-radius 50%
      width 1.6em
      height 1.6em
      box-shadow 1px 1px 3px #888
      transform scale(1.2)
      transition 0.3s
  &::after
    content ''
    padding 0
    left 0
    position absolute
    background-color #fff
    border-radius 50%
    width 1.6em
    height 1.6em
    transform scale(1.2)
    transition 0.3s
    box-shadow 0 0 4px #555

.wpme_divtext
  display inline-block
